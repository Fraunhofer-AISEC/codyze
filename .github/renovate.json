{
  "extends": [
    "config:base",
    ":assignAndReview(fwendland)",
    ":label(dependencies)",
    ":enableVulnerabilityAlerts",
    ":separateMultipleMajorReleases",
    "docker:disableMajor",
    "npm:unpublishSafe"
  ],
  "internalChecksFilter": "strict",
  "packageRules": [
    {
      "matchDatasources": ["maven"],
      "stabilityDays": 1
    },
    {
      "groupName": "CPG packages",
      "matchPackagePrefixes": ["de.fraunhofer.aisec:cpg"]
    },
    {
      "groupName": "picocli packages",
      "matchPackagePrefixes": ["info.picocli:"]
    },
    {
      "groupName": "VSCode plugin dependencies",
      "matchPaths": ["vscode_plugin/**"],
      "extends": ["schedule:earlyMondays"]
    },
    {
      "matchPackageNames": ["vscode"],
      "rangeStrategy": "bump",
      "allowedVersions": "<1.999.0"
    },
    {
      "groupName": "tool scripts' dependencies",
      "matchPaths": ["codyze-v2/scripts/**"],
      "extends": ["schedule:weekly"]
    }
  ]
}
