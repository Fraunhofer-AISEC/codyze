package split_subset

entity E {
	var param;

	op t {
		test(param);
	}

}

rule split_match_1 {
    using
    	E as e
    ensure
        _split_match(e.param, ":", ["c1", "c2"])
    onfail success
}

rule split_match_2 {
    using
        E as e
    ensure
        _split_match(e.param, ":", ["c1", "c2"]) == true
    onfail success
}

rule split_match_3 {
    using
        E as e
    ensure
        _split_match(e.param, ":", ["c1", "c2", "c3"])
    onfail fail
}

rule split_match_4 {
    using
        E as e
    ensure
        _split_match(e.param, ":", ["c1"])
    onfail fail
}
