package mark_java

entity CT {
    var foo;
    var bar;

    op one {
        CT.foo(foo);
        CT.bar(bar);
    }

}

rule Enum {
    using
        CT as c
    ensure
        c.foo == _const_value("CT.Color.RED")
    onfail EnumFail
}

rule Static {
    using
        CT as c
    ensure
        c.bar == _const_value("CT.CONSTANT")
    onfail EnumFail
}