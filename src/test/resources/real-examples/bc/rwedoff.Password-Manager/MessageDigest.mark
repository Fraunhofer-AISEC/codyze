package java

entity java.security.MessageDigest {

	var this : java.security.MessageDigest;

	var algorithm : java.lang.String;
	var providerString : java.lang.String;
	var provider : java.security.Provider;
	
	
	op instantiate {
		this = java.security.MessageDigest.getInstance(algorithm);
		this = java.security.MessageDigest.getInstance(algorithm, providerString);
		this = java.security.MessageDigest.getInstance(algorithm, provider);
	}
	
}


rule AllowedMessageDigest {
	using 
		java.security.MessageDigest as md
	ensure
		md.algorithm in ["SHA-256", "SHA-384", "SHA-512", "SHA-512/256", "SHA3-256",
			"SHA3-384", "SHA3-512", "2.16.840.1.101.3.4.2.8" /* SHA3-256 */, 
			"2.16.840.1.101.3.4.2.9" /* SHA3-384 */, "2.16.840.1.101.3.4.2.10" /* SHA3-512 */]
	onfail
		ImproperMessageDigest
}
