package unittests

entity Order isa Cipher {
	var nonce;
	var nonce_length;
	var iv;
	var myValue;

	op create {
        Botan::get_cipher_mode(_, _);
	}

	op init {
        Botan::set_key(_);
		myValue = Botan::random_vec(_);
        Botan::set_key(_, _);
	}

	op start {
        Botan::start(iv: int);

    	Botan::start();
    	Botan::start(_);
        Botan::start(nonce: int, _);
        Botan::start_msg(...);
	}
	op finish {
        Botan::finish(_);
    }
}

rule UseOfBotan_CipherMode {
	using Order as cm
	ensure
		order cm.start(), cm.finish()
	onfail WrongUseOfBotan_CipherMode
}

