package botan

entity Botan.Public_Key {
	var algo: Botan.ALGO;
	var rsa_bits;

	op create {
	    // C++
		Botan::Pub1Key(algo, rsa_bits);

        // Fake Java
		botan.RSA_PublicKey(algo, rsa_bits);
	}
}

entity Botan.ALGO {
	op create {
	    // C++
		Botan::AlgorithmIdentifier();

		// Fake Java
		botan.AlgorithmIdentifier();
	}
}

entity Botan.PK_Verifier {
	var pub_key: Botan.PubKey;
	var emsa;

	op create {
	    // C++
		PK_Verifier(pub_key, emsa, ...); // additional params: Signature_Format format=IEEE_1363, const std::string &provider=""

        // Fake Java
		botan.PK_Verifier(pub_key, emsa);
		botan.PK_Verifier(pub_key, emsa, ...);
	}
}
